---
import '../styles/global.css';
import { brandSettings } from '../scripts/brandSettings.js';

interface Props {
	title: string;
}

const { title } = Astro.props;

// Generate CSS variables from brand settings
const paletteVars = brandSettings.palette.map(color => {
    const slug = color.name.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '');
    return `--color-${slug}: ${color.hex};`;
}).join('\n\t\t\t');
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style is:global set:html={`
        :root {
            ${paletteVars}
            --font-primary: ${brandSettings.typography.primaryFont};
            --font-secondary: ${brandSettings.typography.secondaryFont};
            --line-height-base: ${brandSettings.typography.lineHeight};
        }
    `} />
</head>
<body>
    <slot />
</body>
</html>